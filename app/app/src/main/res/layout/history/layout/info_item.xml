<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/sampleBoardThumbnail"
        android:layout_width="66dp"
        android:layout_height="153dp"
        android:scaleType="fitXY" />

    <LinearLayout
        android:id="@+id/sampleBoardInfoLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@drawable/horizontal_divider"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:showDividers="beginning">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/sampleBoardName"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:gravity="center_vertical" />

            <TextView
                android:id="@+id/sampleBoardDateTime"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="25dp"
                android:gravity="center_vertical" />

            <ImageButton
                android:id="@+id/sampleBoardMenu"
                android:layout_width="15dp"
                android:layout_height="12dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="9dp"
                android:background="@drawable/menu" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/historyTopReadingsLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

        </LinearLayout>

        <LinearLayout
            android:id="@+id/historyBottomReadingsLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

        </LinearLayout>

    </LinearLayout>

</LinearLayout>